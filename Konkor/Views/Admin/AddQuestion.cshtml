@model Talk

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>String Input Form</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">String Input Form</h2>
        <form asp-action="AddQuestionForm" method="post">
            
                <input asp-for="Id" type="hidden" />
            
            <div class="form-group">
                <label for="Question">سوال را بنویس</label>
                <textarea asp-for="Question" id="Question" class="form-control" rows="5" required></textarea>
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Answer">پاسخ سوال را بنویس</label>
                <textarea asp-for="Answer" id="Answer" class="form-control" rows="5" required></textarea>
                <span asp-validation-for="Answer" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <!-- Include Bootstrap JavaScript libraries -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
